		<select id="checkCnt" parameterType="hashmap" resultType="int">
		select count(d.cli_no) from ( select * from (select  distinct c.cli_no,cli_name,cli_phone, max(cli_log_date) as cli_log_date ,cli_log_Dday,cli_log_Dtime, cli_log_result, emp_name from client c 
